#include <iostream>
#include<conio.h>
using namespace std;
int
main ()
{
    int t, w,c,d,temp1;
    float sum=0;
    cout<<"Enter The Number of Test Cases: ";
    cin >> t;
    while (t--)
    {
        int temp=0;
        cout<<"Enter no. of weapons,capacity,distance: ";
        cin >> w>> c>> d;
        if(w>c && d>c)
        {
            while(w!=0)
            {
                if(w>=c)
                {
                w = w - c;
                temp = temp + c/2;
                }
                else
                w=0;
            }
            d = d - c/2;
            sum = sum - d + temp + 1;
        }
        else if(w>c)
        {
            while(w!=0)
            {
                w = w - c;
                temp = temp + c/2;
            }
            while(temp>c)
            {
                temp1=0;
                temp1=d-c/2;
                sum =sum+ c-temp1 + 1;
                temp=temp-c;
            }
            if(temp>d)
            {
                sum = sum + temp - d + 1;
            }   
        }
        else if(c>w)
        {
            sum = sum + w - d + 1;
        }
    }
    cout<<sum/4;
    return 0;
}
